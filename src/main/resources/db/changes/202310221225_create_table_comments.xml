<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE COMMENTS" author="witczakm">
        <createTable tableName="COMMENTS">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint">
                <constraints references="TASK(id)"
                             foreignKeyName="FK_COMMENTS_TASK"/>
            </column>
            <column name="person_id" type="bigint">
                <constraints references="PERSON(id)"
                             foreignKeyName="FK_COMMENTS_PERSON"/>
            </column>
            <column name="post_time" type="datetime"/>
            <column name="comment_content" type="clob"/>
        </createTable>
    </changeSet>
</databaseChangeLog>