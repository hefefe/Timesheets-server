<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE PROJECT" author="witczakm">
        <createTable tableName="PROJECT">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="key" type="varchar(100)"/>
            <column name="lead" type="bigint">
                <constraints references="PERSON(id)"
                             foreignKeyName="FK_PROJECT_PERSON"/>
            </column>
            <column name="sprint_duration" type="varchar(100)"/>
            <column name="end_of_sprint" type="datetime"/>
            <column name="task_number" type="int" defaultValue="0"/>
            <column name="sprint_number" type="int" defaultValue="0"/>
            <column name="sprint_goal" type="varchar(100)"/>
            <column name="photo" type="blob"/>
            <column name="deleted" type="boolean"/>
            <column name="deleted_time" type="datetime"/>
        </createTable>
    </changeSet>
</databaseChangeLog>