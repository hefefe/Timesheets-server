<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE PERSON" author="witczakm">
        <createTable tableName="PERSON">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="experience" type="varchar(100)"/>
            <column name="position" type="varchar(100)"/>
            <column name="sex" type="varchar(100)"/>
            <column name="date_of_birth" type="date"/>
            <column name="photo" type="blob"/>
            <column name="address_id" type="bigint">
                <constraints references="ADDRESS(id)"
                             foreignKeyName="FK_PERSON_ADDRESS"/>
            </column>
            <column name="contact_id" type="bigint">
                <constraints references="CONTACT(id)"
                             foreignKeyName="FK_PERSON_CONTACT"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints references="USER(id)"
                             foreignKeyName="FK_PERSON_USER"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false"/>
            <column name="deleted_time" type="datetime"/>
            <column name="date_of_employment" type="date"/>
            <column name="work_during_week_in_hours" type="Integer"/>
            <column name="hourly_pay" type="number(16,2)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>