<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE PERSON" author="witczakm">
        <createTable tableName="PERSON">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="experience" type="varchar(100)"/>
            <column name="position" type="varchar(100)"/>
            <column name="photo" type="MEDIUMBLOB"/>
            <column name="phone" type="varchar(50)"/>
            <column name="user_id" type="bigint">
                <constraints references="USER(id)"
                             foreignKeyName="FK_PERSON_USER"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false"/>
            <column name="deleted_time" type="datetime"/>
            <column name="date_of_employment" type="date"/>
            <column name="work_during_week_in_hours" type="Integer"/>
            <column name="hourly_pay" type="number(16,2)"/>
        </createTable>

        <insert tableName="PERSON">
            <column name="first_name" value="Adam"/>
            <column name="last_name" value="Nowak"/>
            <column name="experience" value="Senior"/>
            <column name="position" value="MANAGER"/>
            <column name="user_id" value="1"/>
            <column name="date_of_employment" value="1990-11-19"/>
            <column name="work_during_week_in_hours" value="40"/>
            <column name="hourly_pay" value="10"/>
        </insert>
    </changeSet>
</databaseChangeLog>