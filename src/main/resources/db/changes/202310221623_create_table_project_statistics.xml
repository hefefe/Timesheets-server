<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE PROJECT STATISTICS" author="witczakm">
        <createTable tableName="PROJECT_STATISTICS">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints references="PROJECT(id)"
                             foreignKeyName="FK_PROJECT_STATISTICS_PROJECT"/>
            </column>
            <column name="sprint_number" type="int"/>
            <column name="day" type="date"/>
            <column name="story_points_done" type="int"/>
            <column name="story_points_committed" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>