<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="CREATE TABLE HISTORY" author="witczakm">
        <createTable tableName="HISTORY">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(200)"/>
            <column name="project_key" type="varchar(100)"/>
            <column name="task_name" type="varchar(200)"/>
            <column name="activityDate" type="date"/>
            <column name="started" type="time"/>
            <column name="ended" type="time"/>
            <column name="person_id" type="bigint">
                <constraints references="PERSON(id)"
                             foreignKeyName="FK_HISTORY_PERSON"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>